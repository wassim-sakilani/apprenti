<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- action -->
    <record id="structure_action" model="ir.actions.act_window">
        <field name="name">structure</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">structure</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first structure
            </p>
        </field>
    </record>

    <menuitem
        id="menu_structure"
        name="Structure"
        action="structure_action"
        parent="menu_other_root"
        sequence="10"/>

</odoo>
