<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="configuration_form_inherit" model="ir.ui.view">
        <field name="name">configuration.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">

                <div class="app_settings_block" data-string="Configuration" string="Configuration"
                    data-key="apprenti">
                    <h2>Paramètres SMIG</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <label for="smig" string="SMIG" />
                                <div class="text-muted">
                                    Définir la valeur du SMIG
                                </div>
                                <div class="content-group">
                                    <div class="mt12">
                                        <field name="smig" class="o_light_label" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Taux par Semestre (%)</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <label for="smig" string="Taux" />
                                    <div class="text-muted">
                                        Définir la valeur du Taux de chaque semestre.
                                    </div>
                                    <div class="row mt12" >
                                        <label for="rate_s1" class="col-lg-3 o_light_label" />
                                        <field name="rate_s1" class="col-lg-9" />
                                    </div>

                                    <div class="row">
                                        <label for="rate_s2" class="col-lg-3 o_light_label" />
                                        <field name="rate_s2" class="col-lg-9" />
                                    </div>

                                    <div class="row">
                                        <label for="rate_s3" class="col-lg-3 o_light_label" />
                                        <field name="rate_s3" class="col-lg-9" />
                                    </div>

                                    <div class="row">
                                        <label for="rate_s4" class="col-lg-3 o_light_label" />
                                        <field name="rate_s4" class="col-lg-9" />
                                    </div>

                                    <div class="row">
                                        <label for="rate_s5" class="col-lg-3 o_light_label" />
                                        <field name="rate_s5" class="col-lg-9" />
                                    </div>

                                    <div class="row">
                                        <label for="rate_s6" class="col-lg-3 o_light_label" />
                                        <field name="rate_s6" class="col-lg-9" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>


    <!-- action-->
    <record id="configurations_action" model="ir.actions.act_window">
        <field name="name">Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'apprenti'}</field>
    </record>


    <menuitem
        id="configuration_menu"
        name="Configuration"
        action="configurations_action"
        parent="menu_apprentissage_root"
        sequence="12" />

</odoo>