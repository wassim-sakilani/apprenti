<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_apprenti_report_wizard_form" model="ir.ui.view">
        <field name="name">apprenti.report.wizard.form</field>
        <field name="model">apprenti.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Rapport des Apprentis">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="structure_id"/>
                        <field name="department_id"/>
                        <field name="state"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="Extraction" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_apprenti_report_wizard" model="ir.actions.act_window">
        <field name="name">Excel rapport pour les apprentis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">apprenti.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem
        id="menu_apprenti_report_wizard_root"
        name="Reports"
        parent="menu_apprenti_root"
        sequence="10"/>

    <menuitem id="menu_apprenti_report_wizard"
              name="Rapport Excel"
              action="action_apprenti_report_wizard"
              parent="menu_apprenti_report_wizard_root" 
              sequence="20"/>
</odoo>