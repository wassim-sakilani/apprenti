<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="edit_mois_form" model="ir.ui.view">
        <field name="name">edit.mois.form</field>
        <field name="model">edit.montant.mois.wizard</field>
        <field name="arch" type="xml">
            <form string="Modifier Le Montant Mensuel">
                    <group>
                        
                        <field name="mois" string="Mois" readonly = "1" />
                        <field name="remuneration_maitre" string="Rémunération maitre " />
                        <field name="montant" string="Montant" />
                    </group>

                <footer>
                    <button  string="Modifier" name="action_modifier" type="object"
                        class="oe_highlight" />
                    <button  string="Cancel" class="btn_secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- action -->
    <record id="edit_mois_action" model="ir.actions.act_window">
        <field name="name">Modifier le montant mensuel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">edit.montant.mois.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="edit_mois_form" />
        <field name="target">new</field>
    </record>

</odoo>